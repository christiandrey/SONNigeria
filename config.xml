<?xml version='1.0' encoding='utf-8'?>
<widget id="com.devvv.sonnigeria" version="1.1.0" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>SON(Nigeria)</name>
    <description>
        Information App for Standards Organisation of Nigeria
    </description>
    <author email="oluwaseun.adedire@gmail.com" href="http://www.gmail.com">
        Oluwaseun Adedire
    </author>
    <content src="index.html" />
    <preference name="android-minSdkVersion" value="14" />
    <plugin name="cordova-plugin-inappbrowser" source="npm" spec="~1.5.0" />
    <!-- <plugin name="cordova-plugin-local-notifications-mm" source="npm" spec="~1.0.5" /> -->
    <icon src="icon.png" />

    <access origin="*" />
    <!-- <access-control-allow-origin= "*" /> -->
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
</widget>
